{
  "name": "my-northwind",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^6",
    "express": "^4",
    "hdb": "^0.19.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-manage-product": "cds watch --open manage-product/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "db": {
        "kind": "sql"
      }
    }
  },
  "sapux": [
    "app/manage-product"
  ],
  "devDependencies": {
    "@sap/ux-specification": "^1.108.7"
  }
}
